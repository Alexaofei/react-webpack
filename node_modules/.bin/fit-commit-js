#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  --use-strict "$basedir/../fit-commit-js/bin/fit-commit-js.js" "$@"
  ret=$?
else 
  node  --use-strict "$basedir/../fit-commit-js/bin/fit-commit-js.js" "$@"
  ret=$?
fi
exit $ret
